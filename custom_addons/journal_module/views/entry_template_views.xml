<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================= -->
    <!-- Entry Template List View -->
    <!-- ========================================= -->
    <record id="view_entry_template_list" model="ir.ui.view">
        <field name="name">journal.entry.template.list</field>
        <field name="model">journal.entry.template</field>
        <field name="arch" type="xml">
            <list string="Entry Templates" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="content" widget="html" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- Entry Template Form View -->
    <!-- ========================================= -->
    <record id="view_entry_template_form" model="ir.ui.view">
        <field name="name">journal.entry.template.form</field>
        <field name="model">journal.entry.template</field>
        <field name="arch" type="xml">
            <form string="Entry Template">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    
                    <group string="Template Content">
                        <field name="content" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- Entry Template Action -->
    <!-- ========================================= -->
    <record id="action_entry_template" model="ir.actions.act_window">
        <field name="name">Entry Templates</field>
        <field name="res_model">journal.entry.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first entry template
            </p>
            <p>
                Templates help you create journal entries faster by providing
                pre-written content that you can reuse and customize.
            </p>
        </field>
    </record>

</odoo>