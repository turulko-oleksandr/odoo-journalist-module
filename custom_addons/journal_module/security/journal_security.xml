<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========================================= -->
        <!-- Users groups -->
        <!-- ========================================= -->
        
        <!-- Group: Journal User -->
        <record id="group_journal_user" model="res.groups">
            <field name="name">Journal User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User can view, create and edit own journals and entries</field>
        </record>

        <!-- Group: Journal Manager -->
        <record id="group_journal_manager" model="res.groups">
            <field name="name">Journal Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_journal_user'))]"/>
            <field name="comment">Manager can view, create, edit and delete all journals and entries</field>
        </record>

        <!-- ========================================= -->
        <!-- RECORD RULES (Row Level Security) -->
        <!-- ========================================= -->

        <record id="journal_journal_user_rule" model="ir.rule">
            <field name="name">Journal: User can see only own journals</field>
            <field name="model_id" ref="model_journal_journal"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_journal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="journal_journal_manager_rule" model="ir.rule">
            <field name="name">Journal: Manager can see all journals</field>
            <field name="model_id" ref="model_journal_journal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_journal_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="journal_entry_user_rule" model="ir.rule">
            <field name="name">Journal Entry: User can see only own entries</field>
            <field name="model_id" ref="model_journal_entry"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_journal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="journal_entry_manager_rule" model="ir.rule">
            <field name="name">Journal Entry: Manager can see all entries</field>
            <field name="model_id" ref="model_journal_entry"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_journal_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="journal_entry_published_no_delete" model="ir.rule">
            <field name="name">Journal Entry: Cannot delete published entries</field>
            <field name="model_id" ref="model_journal_entry"/>
            <field name="domain_force">[('state', '!=', 'published')]</field>
            <field name="groups" eval="[(4, ref('group_journal_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
